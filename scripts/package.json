{
  "name": "@ppeforfree/scripts",
  "version": "0.0.1",
  "homepage": "https://ppeforfree.org",
  "description": "Facebook Scripts",
  "author": "PPEForFree",
  "license": "GNU GPL V3",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PPEForFree/ppeforfree.git"
  },
  "bugs": {
    "url": "https://github.com/PPEForFree/ppeforfree/issues"
  },
  "main": "index.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "src"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "tslint": {
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-jest",
      "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {},
    "rulesDirectory": []
  },
  "scripts": {
    "start": "npm run build && node -r dotenv/config lib/index.js",
    "build": "npx tsc",
    "test": "npx jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3",
    "moment": "^2.24.0",
    "mongodb": "^3.5.6",
    "normalize-url": "^4.5.0",
    "papaparse": "^5.2.0",
    "puppeteer": "^3.0.0",
    "uuid": "^3.4.0",
    "validator": "^12.1.0",
    "xmldom": "^0.5.0",
    "xpath": "0.0.27"
  },
  "devDependencies": {
    "@types/xmldom": "^0.1.29",
    "@types/cheerio": "^0.22.17",
    "@types/jest": "^24.9.1",
    "@types/mongodb": "^3.5.8",
    "@types/papaparse": "^5.0.3",
    "@types/puppeteer": "^2.0.1",
    "@types/redis": "^2.8.14",
    "@types/redis-mock": "^0.17.0",
    "@types/uuid": "^3.4.6",
    "@types/validator": "^12.0.1",
    "dotenv": "^8.2.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.0.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-jest": "^1.0.5",
    "typescript": "^3.7.5"
  }
}
